generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @unique
  email        String
  firstName    String
  lastName     String
  profileImage String

  phone           String?
  address         String?
  emirate         String?
  deliveryAddress String?
  deliveryEmirate String?

  orders Order[]

  createdAt DateTime @default(now())
}

model Product {
  id          String        @id @default(uuid())
  name        String
  name_ar     String?       // Optional Arabic name
  description String
  description_ar String?     // Optional Arabic description
  status      ProductStatus
  price       Int
  images      String[]
  category    Category
  isFeatured  Boolean       @default(false)

  createdAt DateTime @default(now())
}

model Banner {
  id          String @id @default(uuid())
  title       String
  title_ar    String?       // Optional Arabic title
  imageString String

  createdAt DateTime @default(now())
}

model Order {
  id     String @id @default(uuid())
  status String @default("pending")
  amount Int

  deliveryAddress String?
  deliveryEmirate String?
  phone           String?

  items OrderItem[]

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  createdAt DateTime @default(now())
}

model OrderItem {
  id       String @id @default(uuid())
  name     String
  price    Int
  quantity Int
  imageUrl String

  Order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId String
}

enum ProductStatus {
  draft
  published
  archived
}

enum Category {
  cosmetics
  perfume
  beauty
}
